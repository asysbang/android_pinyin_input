<?xml version="1.0" encoding="utf-8"?>
<com.asysbang.input.ui.CandidateContainerView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_candidate_container_bg"
    android:orientation="horizontal">


    <ViewSwitcher android:id="@+id/candidate_switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/candidate_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/more_input_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dip" android:text="@string/more_input_method"
                android:src="@drawable/ad_style_noti_white_detail" />

            <TextView
                android:id="@+id/candidate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Android Input Method"
                android:textColor="#ff00ff00"
                android:textSize="30sp" />

            <Button
                android:id="@+id/show_hw_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dip" android:text="@string/show_hw_view"
                android:src="@drawable/ad_style_noti_white_detail" />


        </RelativeLayout>


        <com.asysbang.input.ui.CandidateView
            android:id="@+id/candidate_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />


    </ViewSwitcher>


</com.asysbang.input.ui.CandidateContainerView>